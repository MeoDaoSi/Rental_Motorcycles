<div class="">
    <div class="flex flex-row min-h-screen justify-between mx-12 my-12">
        <div class=" bg-gray-100 border w-2/3 flex flex-col">
            <h2 class="mx-3 my-3 border-b-4 inline-block text-xl">THÔNG TIN</h2>
            <form action="/reservation/infos" class="my-3" method="post">
                <div class="flex flex-row justify-between">
                    
                    <div class="px-6 w-1/2">
                        <label for="last_name" class="bold">Họ</label>
                        <input id="last_name" name="last_name" class="block w-full mb-2 mt-1" type="text">
                        <label for="email" class="bold">Email</label>
                        <input id="email" name="email" class="block w-full mb-2 mt-1" type="text">
                        <label for="address" class="bold">Địa chỉ</label>
                        <input id="address" name="address" class="block w-full mb-2 mt-1" type="text">
                        Giới tính
                        <div class="flex flex-row mt-1">
                            <div>
                                <input id="male" name="male" value="male" " mb-2 mt-1" type="radio">
                                <label for="male" class="bold">Nam</label>
                            </div>
                            <div>
                                <input id="female" name="female" value="female" class="ml-2 mb-2 mt-1" type="radio">
                                <label for="female" class="bold">Nữ</label>
                            </div>
                        </div>
                    </div>
                    <div class="px-6 w-1/2">
                        <label for="first_name" class="bold">Tên</label>
                        <input id="first_name" name="first_name" class="block w-full mb-2 mt-1" type="text">
                        <label for="phone" class="bold">Số điện thoại</label>
                        <input id="phone" name="phone" class="block w-full mb-2 mt-1" type="text">
                        <label for="birth_date" class="bold">Ngày sinh</label>
                        <input id="birth_date" name="birth_date" class="block w-full mb-2 mt-1" type="date">
                        <label for="note">Ghi chú</label>
                        <textarea name="note" id="note" cols="30" rows="1" class="block w-full mb-2 mt-1"></textarea>
                    </div>
                    
                </div>
                <div class="text-right my-4 mx-6">
                    <button class="bg-yellow-400 font-medium  px-5 py-2.5 text-right">Bước tiếp theo</button>
                </div>
            </form>
        </div>
        <div class=" ml-6 bg-gray-100 border w-96 flex flex-col">
            <div class="h-96 mx-4 my-4 border">
                <div class="mx-4 my-2 ">
                    <p class="mt-3 text-xl font-bold">Thông tin nhận xe</p>
                    <p class="text-sm mt-1">{{schedule.start_day}}</p>
                    <p class="text-sm mt-1">Vị Trí: {{schedule.pickup_location}}</p>
                </div>
                <div class="mx-4 my-2 ">
                    <p class="mt-3 text-xl font-bold">Thông tin trả xe</p>
                    <p class="text-sm mt-1">{{schedule.end_day}}</p>
                    <p class="text-sm mt-1">Vị Trí: {{schedule.return_location}}</p>
                </div>
                <div class="mx-4 mt-8 ">
                    <p class="mt-3 text-xl font-bold">Thông tin thuê xe</p>
                    <p class="text-sm mt-1">{{motor.name}}</p>
                    <p class="text-sm mt-1">Giá: {{motor.price_per_day}}₫/Ngày</p>
                </div>
            </div>
            <div class="h-80 mx-4 my-4 border">
                <div class="mx-4 mt-8 ">
                    <p class="mt-3 text-xl font-bold">Tổng cộng</p>
                    <p class="text-xl mt-1 text-right">₫200.000</p>
                </div>
            </div>
        </div>
    </div>
</div>