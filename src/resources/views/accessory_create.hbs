<section class="bg-gray-50 dark:bg-gray-900">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">

        {{#if messages}}
            
            {{>flashMessage parameter=messages }}
        {{/if}}

        <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-xl font-bold">
                    THÊM PHỤ KIỆN
                </h1>
                <form class="space-y-4 md:space-y-6" action="/admin/accessory/create" method="post">
                    <div>
                        <label for="name" class="block mb-2">TÊN PHỤ KIỆN:</label>
                        <input type="text" name="name" id="name" class="block w-full" placeholder="Nón bảo hiểm" required="">
                    </div>
                    <div>
                        <label for="description" class="block mb-2">MÔ TẢ:</label>
                        <input type="text" name="description" id="description" class="block w-full" placeholder="Phụ kiện khi lái xe" required="">
                    </div>
                    <div>
                        <label for="price_per_day" class="block mb-2">GIÁ/NGÀY:</label>
                        <input type="text" name="price_per_day" id="price_per_day" class="block w-full" placeholder="30000" required="">
                    </div>
                    
                    <button type="submit" class="w-full text-white bg-primary-600 font-medium rounded-lg text-sm px-5 py-2.5 text-center ">Thêm</button>
                </form>
            </div>
        </div>
    </div>
</section>