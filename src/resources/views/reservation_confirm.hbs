<div class="">
    <div class="flex flex-row min-h-screen justify-between mx-12 my-12">
        <div class=" bg-gray-100 border w-2/3 flex flex-col">
            <h2 class="mx-3 my-3 border-b-4 inline-block text-xl">THÔNG TIN XE</h2>
            <div class="flex border mx-3 my-3 justify-between">
        
                <div class="flex flex-row">
                    <div>
                        <img class="p-8 object-contain h-48 w-80" src="/assets/img/cho-thue-xe-may-ha-noi.png" alt="product image" />
                    </div>
                        
                    <div class="flex flex-col my-3 ml-6">
                        <p class="mt-3 text-3xl">{{motor.name}}</p>
                        <p class="text-sm mt-1">- Mũ bảo hiểm 1/2 </p>
                        <p class="text-sm mt-1">- Áo mưa 1 lần</p>
                        <p class="text-sm mt-1">- Bảo hiểm xe máy</p>
                        <p class="text-sm mt-1">- Đăng ký xe photo</p>
                        <p class="text-sm mt-1">- Dịch vụ cứu hộ</p>
                    </div>
                </div>

                <div class="my-3">
                    <form action="/reservation/motorcycles" method="post">
                        <input type="text" id="id" name="id" class="hidden" value="{{motor._id}}">
                        <div class="flex flex-col justify-end">
                            <div class="mr-3 mt-3 font-medium text-right">{{motor.price_per_day}}₫/Ngày</div>
                            <div class="mr-3 my-1 text-right">
                                không bao gồm thuế và bảo hiểm
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <h2 class="mx-3 my-3 border-b-4 inline-block text-xl">TỔNG QUAN</h2>
            <div class="flex flex-row justify-between">
                <div class="w-1/2 ml-6">
                    <p class="mt-3 text-xl font-bold">Họ</p>
                    <p class="text-sm mt-1">{{infos.last_name}}</p>
                    <p class="mt-3 text-xl font-bold">Email</p>
                    <p class="text-sm mt-1">{{infos.email}}</p>
                    <p class="mt-3 text-xl font-bold">Địa chỉ</p>
                    <p class="text-sm mt-1">{{infos.address}}</p>
                    <p class="mt-3 text-xl font-bold">Giới tính</p>
                    <p class="text-sm mt-1">{{infos.gender}}</p>
                </div>
                <div class="text-left w-1/2">
                    <p class="mt-3 text-xl font-bold text-left">Tên</p>
                    <p class="text-sm mt-1 text-left">{{infos.first_name}}</p>
                    <p class="mt-3 text-xl font-bold">Số điện thoại</p>
                    <p class="text-sm mt-1">{{infos.phone}}</p>
                    <p class="mt-3 text-xl font-bold">Ngày sinh</p>
                    <p class="text-sm mt-1">{{infos.birth_date}}</p>
                    <p class="mt-3 text-xl font-bold">Ghi chú</p>
                    <p class="text-sm mt-1">{{infos.note}}</p>
                </div>
            </div>
            <div class="text-right my-6 mx-6">
                <form action="/reservation/rental" method="post">
                    <button class="bg-yellow-400 font-medium  px-5 py-2.5 text-right">Xác nhận thuê xe</button>
                </form>
            </div>
        </div>
        <div class=" ml-6 bg-gray-100 border w-96 flex flex-col">
            <div class="h-96 mx-4 my-4 border">
                <div class="mx-4 my-2 ">
                    <p class="mt-3 text-xl font-bold">Thông tin nhận xe</p>
                    <p class="text-sm mt-1">{{schedule.start_day}}</p>
                    <p class="text-sm mt-1">Vị Trí: {{schedule.pickup_location}}</p>
                </div>
                <div class="mx-4 my-2 ">
                    <p class="mt-3 text-xl font-bold">Thông tin trả xe</p>
                    <p class="text-sm mt-1">{{schedule.end_day}}</p>
                    <p class="text-sm mt-1">Vị Trí: {{schedule.return_location}}</p>
                </div>
                <div class="mx-4 mt-8 ">
                    <p class="mt-3 text-xl font-bold">Thông tin thuê xe</p>
                    <p class="text-sm mt-1">{{motor.name}}</p>
                    <p class="text-sm mt-1">Giá: {{motor.price_per_day}}₫/Ngày</p>
                </div>
            </div>
            <div class="h-80 mx-4 my-4 border">
                <div class="mx-4 mt-8 ">
                    <p class="mt-3 text-xl font-bold">Tổng cộng</p>
                    <p class="text-xl mt-1 text-right">₫200.000</p>
                </div>
            </div>
        </div>
    </div>
</div>