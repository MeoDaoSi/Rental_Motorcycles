<div class="bg-gray-100">

    <div class="flex-1 flex">
        
        {{>sidebar}}

        <div class="flex-1 p-4">
            <div class="relative max-w-md w-full">
                <div class="absolute top-1 left-2 inline-flex items-center p-2">
                    <i class="fas fa-search text-gray-400"></i>
                </div>
                <input class="w-full h-10 pl-10 pr-4 py-1 text-base placeholder-gray-500 border rounded-full focus:shadow-outline" type="search" placeholder="Search...">
            </div>

            <div class="bg-white p-4 rounded-md mt-4">
                <div class="flex justify-between">
                    <h2 class="text-gray-500 text-lg font-semibold pb-4">Thông tin hợp đồng thuê</h2>
                    <div>
                        <h2 class="text-gray-500 text-lg font-semibold pb-4 inline">Tổng số lượng hợp đồng: </h2>
                        <h2 class="text-lg font-semibold pb-4 inline text-red-500 ">{{rental.length}}</h2>
                    </div>
                </div>
                <div class="bg-gradient-to-r from-cyan-300 to-cyan-500 h-px mb-6"></div>
                    <table class="w-full table-auto text-sm">
                        <thead>
                            <tr class="text-sm ">
                                <th class="text-left py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">STT</th>
                                <th class="text-left py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">Nơi nhận xe</th>
                                <th class="text-left py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">Nơi trả xe</th>
                                <th class="text-left py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">Thời gian lập</th>
                                <th class="text-left py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">trạng thái</th>
                                <th class="text-left py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">Chi Tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each rental}}
                                <tr class="hover:bg-grey-lighter">
                                    <td class="py-2 px-4 border-b border-grey-light">{{increment @index}}</td>
                                    <td class="py-2 px-4 border-b border-grey-light">{{this.pickup}}</td>
                                    <td class="py-2 px-4 border-b border-grey-light">{{this.return}}</td>
                                    <td class="py-2 px-4 border-b border-grey-light">{{formatDate this.createdAt}}</td>
                                    <td class="py-2 px-4 border-b border-grey-light">
                                        <button type="button" class="bg-{{this.status}}-400 hover:bg-{{this.status}}-400 text-white font-semibold py-2 px-4 rounded">{{this.status}}</button>
                                    </td>
                                    <td class="py-2 px-4 border-b border-grey-light">
                                        <a href="/admin/rental/{{this._id}}">
                                            <i class="fa-solid fa-info"></i>
                                        </a>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>