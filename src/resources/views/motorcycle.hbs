<div class="bg-gray-100">

    <div class="flex-1 flex">
        
        {{>sidebar}}

        <div class="flex-1 p-4">
            <div class="relative max-w-md w-full">
                <div class="absolute top-1 left-2 inline-flex items-center p-2">
                    <i class="fas fa-search text-gray-400"></i>
                </div>
                <input class="w-full h-10 pl-10 pr-4 py-1 text-base placeholder-gray-500 border rounded-full focus:shadow-outline" type="search" placeholder="Search...">
            </div>

            <div class="bg-white p-4 rounded-md mt-4">
                <div class="flex justify-between">
                    <h2 class="text-gray-500 text-lg font-semibold pb-4">Thông tin người dùng</h2>
                    <div>
                        <h2 class="text-gray-500 text-lg font-semibold pb-4 inline">Tổng số lượng hợp đồng: </h2>
                        <h2 class="text-lg font-semibold pb-4 inline text-red-500 ">{{motorcycle.length}}</h2>
                    </div>
                </div>
                <div class="bg-gradient-to-r from-cyan-300 to-cyan-500 h-px mb-6"></div>
                    <table class="w-full table-auto text-sm">
                        <thead>
                            <tr class="text-sm ">
                                <th class="text-left py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light ">Ảnh</th>
                                <th class="text-left py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">Tên</th>
                                <th class="text-left py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">Biển số</th>
                                <th class="text-left py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">Trạng thái</th>
                                <th class="text-left py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">Giá</th>
                                <th class="text-left py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light">Chỉnh sửa</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each motorcycle}}
                                <tr class="hover:bg-grey-lighter">
                                    <td class="py-2 px-4 border-b border-grey-light"><img src="/assets/img/moto-icon.jpg" alt="Foto Perfil" class="rounded-full h-10 w-10"></td>
                                    <td class="py-2 px-4 border-b border-grey-light">{{this.name}}</td>
                                    <td class="py-2 px-4 border-b border-grey-light">{{this.license_plate}}</td>
                                    <td class="py-2 px-4 border-b border-grey-light">{{this.status}}</td>
                                    <td class="py-2 px-4 border-b border-grey-light">{{VND_format this.price_per_day}}</td>
                                    <td class="py-2 px-4 border-b border-grey-light"><a href=""><i class="fa-solid fa-pen-to-square"></i></a></td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <div class="text-right mt-4">
                        <a href="/admin/location/{{location_id}}/motorcycle/create" class="bg-cyan-500 hover:bg-cyan-600 text-white font-semibold py-2 px-4 rounded">
                            Thêm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>